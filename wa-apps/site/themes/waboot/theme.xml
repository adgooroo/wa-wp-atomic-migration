<?xml version="1.0" encoding="utf-8"?>
<theme id="waboot" app="site">
    <name>Waboot</name>
    <description>A modern, fully-local Webasyst base theme. Built with Bootstrap 5, Alpine.js, and BEM methodology for outstanding performance across all Webasyst applications.</description>
    <version>1.0.0</version>
    <vendor>Waboot Team</vendor>
    <author>WordPress to Webasyst Migration Project</author>
    <url>https://github.com/wp-wa-migration/waboot</url>
    
    <!-- Parent theme - none, this is the base theme -->
    <parent_theme></parent_theme>
    
    <!-- LOCALIZATION SECTION -->
    <locales>
        <!-- Navigation and UI Elements -->
        <locale>
            <msgid>Home</msgid>
            <msgstr locale="ru_RU">Главная</msgstr>
