<?xml version="1.0" encoding="utf-8"?>
<theme id="waboot-child" app="helpdesk" system="0" vendor="adgooroo">
    <name>Waboot Child Helpdesk</name>
    <description>Child theme inheriting from Site app Waboot theme with Helpdesk-specific functionality and comprehensive JSON-LD structured data</description>
    <version>1.0.0</version>
    <parent_theme app="site">waboot</parent_theme>
    <author>AdGooroo</author>
    <requirements>
        <app id="site" version="*"/>
        <theme app="site" id="waboot"/>
