<?xml version="1.0" encoding="utf-8"?>
<theme id="waboot" app="shop">
    <name>Waboot Shop</name>
    <description>A modern, fully-local Webasyst shop theme inheriting from site:waboot. Built with Bootstrap 5, Alpine.js, and BEM methodology for outstanding e-commerce performance.</description>
    <version>1.0.0</version>
    <vendor>Waboot Team</vendor>
    <author>WordPress to Webasyst Migration Project</author>
    <url>https://github.com/wp-wa-migration/waboot</url>
    
    <!-- Parent theme - inherits from site:waboot -->
    <parent_theme>site:waboot</parent_theme>
    
    <!-- LOCALIZATION SECTION -->
    <locales>
        <!-- E-commerce Elements -->
        <locale>
            <msgid>Add to Cart</msgid>
            <msgstr locale="ru_RU">В корзину</msgstr>
            <msgstr locale="en_US">Add to Cart</msgstr>
        </locale>
        <locale>
            <msgid>Shopping Cart</msgid>
            <msgstr locale="ru_RU">Корзина покупок</msgstr>
            <msgstr locale="en_US">Shopping Cart</msgstr>
        </locale>
        <locale>
            <msgid>Quick View</msgid>
            <msgstr locale="ru_RU">Быстрый просмотр</msgstr>
            <msgstr locale="en_US">Quick View</msgstr>
        </locale>
        <locale>
            <msgid>Add to Wishlist</msgid>
            <msgstr locale="ru_RU">В избранное</msgstr>
            <msgstr locale="en_US">Add to Wishlist</msgstr>
        </locale>
        <locale>
            <msgid>Compare</msgid>
            <msgstr locale="ru_RU">Сравнить</msgstr>
            <msgstr locale="en_US">Compare</msgstr>
        </locale>
        <locale>
            <msgid>Product Details</msgid>
            <msgstr locale="ru_RU">Подробности товара</msgstr>
            <msgstr locale="en_US">Product Details</msgstr>
        </locale>
        <locale>
            <msgid>Search products...</msgid>
            <msgstr locale="ru_RU">Поиск товаров...</msgstr>
            <msgstr locale="en_US">Search products...</msgstr>
        </locale>
        
        <!-- Product Properties -->
        <locale>
            <msgid>Price</msgid>
            <msgstr locale="ru_RU">Цена</msgstr>
            <msgstr locale="en_US">Price</msgstr>
        </locale>
        <locale>
            <msgid>Availability</msgid>
            <msgstr locale="ru_RU">Наличие</msgstr>
            <msgstr locale="en_US">Availability</msgstr>
        </locale>
        <locale>
            <msgid>In Stock</msgid>
            <msgstr locale="ru_RU">В наличии</msgstr>
            <msgstr locale="en_US">In Stock</msgstr>
        </locale>
        <locale>
            <msgid>Out of Stock</msgid>
            <msgstr locale="ru_RU">Нет в наличии</msgstr>
            <msgstr locale="en_US">Out of Stock</msgstr>
        </locale>
        <locale>
            <msgid>Low Stock</msgid>
            <msgstr locale="ru_RU">Осталось мало</msgstr>
            <msgstr locale="en_US">Low Stock</msgstr>
        </locale>
        
        <!-- Categories and Filters -->
        <locale>
            <msgid>Categories</msgid>
            <msgstr locale="ru_RU">Категории</msgstr>
            <msgstr locale="en_US">Categories</msgstr>
        </locale>
        <locale>
            <msgid>Filter</msgid>
            <msgstr locale="ru_RU">Фильтр</msgstr>
            <msgstr locale="en_US">Filter</msgstr>
        </locale>
        <locale>
            <msgid>Sort by</msgid>
            <msgstr locale="ru_RU">Сортировать по</msgstr>
            <msgstr locale="en_US">Sort by</msgstr>
        </locale>
        <locale>
            <msgid>Show more</msgid>
            <msgstr locale="ru_RU">Показать еще</msgstr>
            <msgstr locale="en_US">Show more</msgstr>
        </locale>
        <locale>
            <msgid>Load more</msgid>
            <msgstr locale="ru_RU">Загрузить еще</msgstr>
