            <msgstr_plural2 locale="ru_RU">товаров</msgstr_plural2>
            <msgstr locale="en_US">product</msgstr>
            <msgstr_plural locale="en_US">products</msgstr_plural>
        </locale>
    </locales>
    
    <!-- Theme Settings -->
    <settings>
        <!-- Shop-specific Layout Options -->
        <setting var="shop_layout_type" control_type="select" name="Shop Layout Type">
            <option value="grid">Grid Layout</option>
            <option value="list">List Layout</option>
            <option value="masonry">Masonry Layout</option>
        </setting>
        
        <!-- Product Display Options -->
        <setting var="products_per_page" control_type="input" name="Products per Page">
            <description>Number of products to display per page</description>
        </setting>
        
        <!-- Quick View Options -->
        <setting var="enable_quick_view" control_type="checkbox" name="Enable Quick View">
            <description>Enable quick view functionality for products</description>
        </setting>
        
        <!-- Wishlist Options -->
        <setting var="enable_wishlist" control_type="checkbox" name="Enable Wishlist">
            <description>Enable wishlist functionality</description>
        </setting>
        
        <!-- Compare Options -->
        <setting var="enable_compare" control_type="checkbox" name="Enable Compare">
            <description>Enable product comparison functionality</description>
        </setting>
        
        <!-- Stock Display -->
        <setting var="show_stock_status" control_type="checkbox" name="Show Stock Status">
            <description>Display stock status on product cards</description>
        </setting>
        
        <!-- Price Display -->
        <setting var="show_original_price" control_type="checkbox" name="Show Original Price">
            <description>Show original price for discounted products</description>
        </setting>
    </settings>
    
    <!-- Supported Features -->
    <features>
        <feature id="responsive">Fully responsive design</feature>
        <feature id="bootstrap5">Bootstrap 5 framework</feature>
        <feature id="alpinejs">Alpine.js micro-reactivity</feature>
        <feature id="bem">BEM CSS methodology</feature>
        <feature id="local_assets">No CDN dependencies</feature>
        <feature id="ecommerce_optimized">E-commerce optimized</feature>
        <feature id="quick_view">Quick view functionality</feature>
        <feature id="wishlist">Wishlist functionality</feature>
        <feature id="compare">Product comparison</feature>
        <feature id="stock_management">Stock status display</feature>
        <feature id="rtl">RTL language support</feature>
        <feature id="accessibility">WCAG 2.1 compliant</feature>
    </features>
    
    <!-- Required Webasyst Version -->
    <requirements>
        <app id="shop" version="9.0.0"/>
        <php version="7.4.0"/>
    </requirements>
    
    <!-- Theme Files Structure -->
    <files>
        <file path="css/shop-atoms.css" type="stylesheet"/>
        <file path="css/shop-molecules.css" type="stylesheet"/>
        <file path="css/shop-organisms.css" type="stylesheet"/>
        <file path="css/waboot-child.css" type="stylesheet"/>
        <file path="js/waboot-shop.js" type="javascript"/>
        <file path="templates/atoms/add-to-cart-button.html" type="template"/>
        <file path="templates/atoms/price.html" type="template"/>
        <file path="templates/atoms/stock-status.html" type="template"/>
        <file path="templates/molecules/breadcrumb.html" type="template"/>
        <file path="templates/molecules/product-card.html" type="template"/>
        <file path="templates/molecules/product-filters.html" type="template"/>
        <file path="templates/organisms/product-grid.html" type="template"/>
        <file path="templates/organisms/shopping-cart.html" type="template"/>
    </files>
    
    <!-- Theme Compatibility -->
    <compatibility>
        <app id="shop" version="9.0.0"/>
    </compatibility>
    
    <!-- Theme Preview Screenshots -->
    <screenshots>
        <screenshot path="img/screenshots/product.png">Product Page</screenshot>
        <screenshot path="img/screenshots/checkout.png">Checkout Process</screenshot>
        <screenshot path="img/screenshots/cart.png">Shopping Cart</screenshot>
        <screenshot path="img/screenshots/mobile.png">Mobile View</screenshot>
    </screenshots>
    
    <!-- Theme Categories -->
    <categories>
        <category>E-commerce</category>
        <category>Bootstrap</category>
        <category>Responsive</category>
        <category>Modern</category>
    </categories>
    
    <!-- License Information -->
    <license>MIT</license>
    
    <!-- Theme Changelog -->
    <changelog>
        <version number="1.0.0" date="2024-12-19">
            <change>Initial release as shop theme</change>
            <change>Inherits from site:waboot base theme</change>
            <change>E-commerce specific components</change>
            <change>Product grid and card components</change>
            <change>Shopping cart functionality</change>
            <change>Quick view and wishlist features</change>
        </version>
    </changelog>
</theme>