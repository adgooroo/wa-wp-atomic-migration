<?xml version="1.0" encoding="utf-8"?>
<theme id="waboot" app="mailer">
    <name>Waboot Mailer</name>
    <description>A modern, fully-local Webasyst mailer theme inheriting from site:waboot. Built with Bootstrap 5, Alpine.js, and BEM methodology for outstanding email marketing performance.</description>
    <version>1.0.0</version>
    <vendor>Waboot Team</vendor>
    <author>WordPress to Webasyst Migration Project</author>
    <url>https://github.com/wp-wa-migration/waboot</url>
    
    <!-- Parent theme - inherits from site:waboot -->
    <parent_theme>site:waboot</parent_theme>
    
    <!-- LOCALIZATION SECTION -->
    <locales>
        <!-- Email Marketing Elements -->
        <locale>
            <msgid>Newsletter</msgid>
            <msgstr locale="ru_RU">Рассылка</msgstr>
            <msgstr locale="en_US">Newsletter</msgstr>
        </locale>
        <locale>
            <msgid>Subscribe</msgid>
            <msgstr locale="ru_RU">Подписаться</msgstr>
            <msgstr locale="en_US">Subscribe</msgstr>
        </locale>
        <locale>
            <msgid>Unsubscribe</msgid>
            <msgstr locale="ru_RU">Отписаться</msgstr>
            <msgstr locale="en_US">Unsubscribe</msgstr>
        </locale>
        <locale>
            <msgid>Your email address</msgid>
            <msgstr locale="ru_RU">Ваш email адрес</msgstr>
            <msgstr locale="en_US">Your email address</msgstr>
        </locale>
        <locale>
            <msgid>Campaign</msgid>
            <msgstr locale="ru_RU">Кампания</msgstr>
            <msgstr locale="en_US">Campaign</msgstr>
        </locale>
        <locale>
            <msgid>Template</msgid>
            <msgstr locale="ru_RU">Шаблон</msgstr>
            <msgstr locale="en_US">Template</msgstr>
        </locale>
        <locale>
            <msgid>Send</msgid>
            <msgstr locale="ru_RU">Отправить</msgstr>
            <msgstr locale="en_US">Send</msgstr>
        </locale>
        <locale>
            <msgid>Draft</msgid>
            <msgstr locale="ru_RU">Черновик</msgstr>
            <msgstr locale="en_US">Draft</msgstr>
        </locale>
        <locale>
            <msgid>Schedule</msgid>
            <msgstr locale="ru_RU">Запланировать</msgstr>
            <msgstr locale="en_US">Schedule</msgstr>
        </locale>
        
        <!-- Statistics -->
        <locale>
            <msgid>Statistics</msgid>
            <msgstr locale="ru_RU">Статистика</msgstr>
            <msgstr locale="en_US">Statistics</msgstr>
        </locale>
        <locale>
            <msgid>Opened</msgid>
            <msgstr locale="ru_RU">Открыто</msgstr>
            <msgstr locale="en_US">Opened</msgstr>
        </locale>
        <locale>
            <msgid>Clicked</msgid>
            <msgstr locale="ru_RU">Переходы</msgstr>
            <msgstr locale="en_US">Clicked</msgstr>
        </locale>
        <locale>
            <msgid>Bounced</msgid>
            <msgstr locale="ru_RU">Отказы</msgstr>
            <msgstr locale="en_US">Bounced</msgstr>
        </locale>
        <locale>
            <msgid>Subscribers</msgid>
            <msgstr locale="ru_RU">Подписчики</msgstr>
            <msgstr locale="en_US">Subscribers</msgstr>
        </locale>
        
        <!-- Lists -->
        <locale>
            <msgid>Mailing Lists</msgid>
            <msgstr locale="ru_RU">Списки рассылки</msgstr>
            <msgstr locale="en_US">Mailing Lists</msgstr>
        </locale>
        <locale>
            <msgid>Create List</msgid>
            <msgstr locale="ru_RU">Создать список</msgstr>
            <msgstr locale="en_US">Create List</msgstr>
        </locale>
        <locale>
            <msgid>Import Contacts</msgid>
            <msgstr locale="ru_RU">Импорт контактов</msgstr>
            <msgstr locale="en_US">Import Contacts</msgstr>
        </locale>
        <locale>
            <msgid>Export Contacts</msgid>
            <msgstr locale="ru_RU">Экспорт контактов</msgstr>
            <msgstr locale="en_US">Export Contacts</msgstr>
        </locale>
        
        <!-- Plurals Support -->
        <locale>
            <msgid>subscriber</msgid>
            <msgid_plural>subscribers</msgid_plural>
            <msgstr locale="ru_RU">подписчик</msgstr>
            <msgstr_plural locale="ru_RU">подписчика</msgstr_plural>
            <msgstr_plural2 locale="ru_RU">подписчиков</msgstr_plural2>
            <msgstr locale="en_US">subscriber</msgstr>
            <msgstr_plural locale="en_US">subscribers</msgstr_plural>
        </locale>
        <locale>
            <msgid>campaign</msgid>
            <msgid_plural>campaigns</msgid_plural>
            <msgstr locale="ru_RU">кампания</msgstr>
            <msgstr_plural locale="ru_RU">кампании</msgstr_plural>
            <msgstr_plural2 locale="ru_RU">кампаний</msgstr_plural2>
            <msgstr locale="en_US">campaign</msgstr>
            <msgstr_plural locale="en_US">campaigns</msgstr_plural>
        </locale>
    </locales>
    
    <!-- Theme Settings -->
    <settings>
        <!-- Mailer-specific Layout Options -->
        <setting var="mailer_layout_type" control_type="select" name="Mailer Layout Type">
            <option value="dashboard">Dashboard Layout</option>
            <option value="compact">Compact Layout</option>
            <option value="detailed">Detailed Layout</option>
        </setting>
        
        <!-- Campaign Display Options -->
        <setting var="campaigns_per_page" control_type="input" name="Campaigns per Page">
            <description>Number of campaigns to display per page</description>
        </setting>
        
        <!-- Template Options -->
        <setting var="show_template_preview" control_type="checkbox" name="Show Template Preview">
            <description>Display template preview in editor</description>
        </setting>
        
        <!-- Statistics Display -->
        <setting var="show_statistics" control_type="checkbox" name="Show Statistics">
            <description>Display campaign statistics</description>
        </setting>
        
        <!-- Subscriber Management -->
        <setting var="enable_subscriber_management" control_type="checkbox" name="Enable Subscriber Management">
            <description>Enable subscriber management features</description>
        </setting>
        
        <!-- Email Templates -->
        <setting var="show_email_templates" control_type="checkbox" name="Show Email Templates">
            <description>Display email template gallery</description>
        </setting>
    </settings>
    
    <!-- Supported Features -->
    <features>
        <feature id="responsive">Fully responsive design</feature>
        <feature id="bootstrap5">Bootstrap 5 framework</feature>
        <feature id="alpinejs">Alpine.js micro-reactivity</feature>
        <feature id="bem">BEM CSS methodology</feature>
        <feature id="local_assets">No CDN dependencies</feature>
        <feature id="email_marketing">Email marketing optimized</feature>
        <feature id="campaign_management">Campaign management</feature>
        <feature id="subscriber_management">Subscriber management</feature>
        <feature id="email_templates">Email templates</feature>
        <feature id="statistics">Campaign statistics</feature>
        <feature id="rtl">RTL language support</feature>
        <feature id="accessibility">WCAG 2.1 compliant</feature>
    </features>
    
    <!-- Required Webasyst Version -->
    <requirements>
        <app id="mailer" version="2.0.0"/>
        <php version="7.4.0"/>
    </requirements>
    
    <!-- Theme Files Structure -->
    <files>
        <file path="css/mailer-atoms.css" type="stylesheet"/>
        <file path="css/mailer-molecules.css" type="stylesheet"/>
        <file path="css/mailer-organisms.css" type="stylesheet"/>
        <file path="js/waboot-mailer.js" type="javascript"/>
        <file path="templates/dashboard.html" type="template"/>
        <file path="templates/campaign.html" type="template"/>
        <file path="templates/subscribers.html" type="template"/>
        <file path="templates/templates.html" type="template"/>
    </files>
    
    <!-- Theme Compatibility -->
    <compatibility>
        <app id="mailer" version="2.0.0"/>
    </compatibility>
    
    <!-- Theme Preview Screenshots -->
    <screenshots>
        <screenshot path="img/screenshots/dashboard.png">Dashboard</screenshot>
        <screenshot path="img/screenshots/campaign-editor.png">Campaign Editor</screenshot>
        <screenshot path="img/screenshots/subscribers.png">Subscribers</screenshot>
        <screenshot path="img/screenshots/mobile.png">Mobile View</screenshot>
    </screenshots>
    
    <!-- Theme Categories -->
    <categories>
        <category>Email Marketing</category>
        <category>Bootstrap</category>
        <category>Responsive</category>
        <category>Modern</category>
    </categories>
    
    <!-- License Information -->
    <license>MIT</license>
    
    <!-- Theme Changelog -->
    <changelog>
        <version number="1.0.0" date="2024-12-19">
            <change>Initial release as mailer theme</change>
            <change>Inherits from site:waboot base theme</change>
            <change>Email marketing specific components</change>
            <change>Campaign management templates</change>
            <change>Subscriber management functionality</change>
            <change>Email template system</change>
        </version>
    </changelog>
</theme> 